#pragma once

#include "ErrorReporter.h"
#include "Token.h"
#include <string>
#include <vector>

class Lexer {
  public:
    Lexer(const std::string &source);
    auto scan_tokens() -> std::vector<Token>;

  private:
    const std::string source;
    int start = 0;
    int current = 0;
    int line = 1;
    auto is_at_end() -> bool;
    auto scan_token() -> Token;
};
